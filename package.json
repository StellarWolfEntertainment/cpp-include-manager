{
  "name": "cpp-include-manager",
  "displayName": "C++ Include Manager",
  "description": "Visual Studio Code extension for managing C++ include paths",
  "version": "1.0.0",
  "publisher": "Stellar Wolf Entertainment",
  "repository": { "url": "https://github.com/StellarWolfEntertainment/cpp-include-manager" },
  "icon": ".vscode/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Programming Languages", "Other"],
  "activationEvents": ["workspaceContains:.vscode/incMan.json"],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "CPP Include Manager Settings",
      "properties": {
        "cpp-include-manager.libraryPath": {
          "type": "string",
          "default": "C:/Libraries/${lib}/include",
          "description": "The standardized path to the library includes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
